{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"<% if(authMethod==="Session") { %>, 
    "typeRoots": ["./node_modules/@types", "./types"] <% } %>
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"  // Including the types folder
  ]
}
